@model ProductCreateModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["errorMessage"]!=null)
{
    <p>@TempData["errorMessage"]?.ToString()</p>
}
<form asp-action="Create" asp-controller="Home" method="post">
    <div class="container">
        <div class="mt-3">
            <label>Adı</label>
            <input type="text" asp-for="@Model.Name" class="form-control" />
        </div>
        <div class="mt-3">
            <label>Stok</label>
            <input type="number" asp-for="@Model.Stock" class="form-control" />
        </div>
        <div class="mt-3">
            <label>fiyat</label>
            <input type="text" asp-for="@Model.Price" class="form-control" />
        </div>
        <div class="mt-3">
            <a asp-action="Index" asp-controller="Home">Geri Dön</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </div>
  
</form>
